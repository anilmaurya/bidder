= javascript_include_tag 'game_logic'
.row_top
  #game_result
  #result.modal.hide.fade
  .span12.position_relative
    .screen
      .player2
        = image_tag (@player2.user && File.exists?(Rails.root.join('public',@player2.user.image_url.to_s))) || 'barney.png', size: '90x120'
        %span.badge.badge-info.custom_badge= "$ " + @player2.current_amount.to_s
        = label_tag @player2.name || @player2.username
      .player1
        = image_tag (@player1.user && File.exists?(Rails.root.join('public',@player1.user.image_url.to_s))) || "homer.png", size: '90x120'
        %span.badge.badge-info.custom_badge= "$ " + @player1.current_amount.to_s
        = label_tag "#{ @player1.bot ? 'Computer' : (@player1.name || @player1.username) }"
      .bar_holder
        .bar
        .bar
        .bar
          .object
        .bar
        .bar
  .span12.bidding_form
    %a.twitter-share-button.btn.btn-custom.tweet-button.hide{href: "https://twitter.com/intent/tweet?original_referer=http://bidder.herokuapp.com//&via=http://bidder.herokuapp.com/&text=#{URI::escape('Won! the bidder game')}", target: '_blank'}
      Tweet it
    .span4.game_move
      .bid
        = simple_form_for @bid, url: game_move_path(@game_move), method: :put, html: { class: 'form-horizontal', id: 'bid_form'}, remote: true do |f|
          = f.input :amount, label: 'Bid Amount', class: 'mini'
          = f.hidden_field :game_id, value: @game.id
          = f.hidden_field :player_id, value: current_player.id
          = f.submit 'BID', class: 'btn btn-primary btn-large', id:'submit_bid'
      .alert.hide{id: 'player_wait'}
        = link_to 'X', '#', class: 'close', data: { dismiss: "alert"}
        Waiting For Second player.
      .play_again.hide
        = link_to 'Play', new_game_path, class: 'btn btn-large btn-primary'
        = link_to 'Practice', practise_games_path, class: 'btn btn-large btn-primary'
  .user_input
#entered_zero_error.modal.hide.fade
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
    %h3 Invalid bidding amount.
  .modal-body
    %p Only values greater than 0 are allowed. Please re-enter a valid bidding amount.
  .modal-footer
    %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
    /%a.btn.btn-primary{href: "#"} Save changes
:coffeescript
  @current_amount = "#{current_player.current_amount}"
  @current_player_id = "#{current_player.id}"
  @level = "#{@game.level - 1 }"
