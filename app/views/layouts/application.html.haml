!!!
%html
  %head
    %title Bidder
    = favicon_link_tag "/favicon.ico"
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag "application"
    = yield :css
    = yield :js
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          = link_to image_tag('logo.png', class: 'logo'), root_url
        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav
            %li= link_to 'About Us', about_us_path
            %li= link_to 'How To Play', '#', {class: 'show_rule_button', data:{toggle: 'modal', target: '.rule-point'}}
            %li= link_to 'Top Bidders', top_bidders_path
          - if current_user
            %ul.nav.pull-right
              %li= image_tag current_user.image_url if current_user.image?
              %li= link_to (current_user.name || current_user.username), '#'
              %li=# link_to 'Profile', user_profile_path(username: current_user.username)
              %li= link_to 'Logout', destroy_user_session_path, method: :delete
    .container
      = show_pending_invitation_request(@invitation_request)
      .row
        = yield
        = hidden_field_tag "current_user_id", current_user.try(:id)
        = hidden_field_tag "current_username", current_user.try(:username).try(:humanize)
    .modal.fade.hide.rule-point
      .modal-header
        %button.close{type: 'button', data:{dismiss: 'modal'}}
          x
        %h3
          How To Play
      .modal-body
        = render 'games/rules'
      .modal-footer
        %a.btn{data:{dismiss: 'modal'}}
          Close
:javascript
  window.PUSHER_API_KEY = "#{Pusher.key}"
